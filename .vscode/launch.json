    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Node/TS) Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "stopOnEntry": false,
            "args": ["--resolveJsonModule"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/*.js"],
            "console": "internalConsole"
        }
    ]
}
