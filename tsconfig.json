{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"],
            "@/*": ["src/*"]
        },
        "types": ["webpack-env"]
    },
    "exclude": ["node_modules"]
}
